#!/bin/bash

. "$(dirname "$0")"/../common/common_source
NAME=gdbm
VERSION=$GDBM_VER
TARFILE=$NAME-$VERSION.tar.gz
FETCH_URL="http://ftp.gnu.org/gnu/gdbm/$TARFILE"

fetch()
{
    # wget is not availabe in chroot, hence prefetch it
    if [ ! -f "${SRCDIR}"/"$TARFILE" ]; then
        echo "This package is not availabe.. Please download it manually and place it inside /lfs-source folder"
        return 1
    fi
}

configure()
{
    cd "$TMP"/"$NAME"-"$VERSION"
    mkdir build; cd build; BUILD_PATH=$(pwd)

    ../configure --prefix=/usr --disable-static --enable-libgdbm-compat >>"$LOGFILE" 2>&1
}

. "$(dirname "$0")"/../common/common_exec
